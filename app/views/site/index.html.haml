            %a{href: 'http://www.digitalmeet.it/', target: '_blank', title: 'Digital Meet'}
              = image_tag 'logos/digital-meet.jpg'
        
        %ul 
        
          %li.hackathon-partners-and-organizers-face
            %a{href: 'http://twitter.com/brigugraphic', target: '_blank', title: '@BriguGraphic'}
              = image_tag 'brigugraphic.png'

          %li.hackathon-partners-and-organizers-face
